<h1>All Tags</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag), class: 'tag_title' %>
      <% if logged_in? %>
        <%= link_to "Delete", tag_path(tag), method: :delete, data: {confirm: "Really delete the #{tag.name} tag?"}, class: 'delete_tag' %>
      <% end %>
    </li>
  <% end %>
</ul>
