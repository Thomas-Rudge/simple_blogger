@font-face {
  font-family: 'komika';
  src: font-url('KOMTXT.eot');
  src: font-url('KOMTXT.eot?#iefix') format('embedded-opentype'),
       font-url('KOMTXT.woff') format('woff'),
       font-url('KOMTXT.ttf') format('truetype'),
       font-url('KOMTXT.svg#komika_textregular') format('svg');
  font-weight: normal;
  font-style: normal;
}


html {
  height: 100%;
  width: 100%;
  background-image: asset-url("body.png");
  background-repeat: repeat;
}

body {
  width: 900px;
  background-color: #D6D6D6;
  margin: 0px auto;
  box-shadow: 1px 0px 40px #262626;
}

h1 {
  color: #051B2B;
  font-family: komika;
  font-size: 30pt;
}

ul {
  list-style: none;
  width: 600px;
}

ul li {
  width:100%;
}

a {
  width: 100%;
  display: inline-block;
  text-decoration: none;
}

.navs {
  display: block;
  width: 100%;
  padding: 0;
  margine: 0;
  padding-bottom: 15px;
}

.article_link a:link, .article_link a:visited {
  text-decoration: none;
  color: #36596F;
  font-weight: bold;
  text-align: left;
}

.article_link {
  background-color: #E7E7E7;
  display: inline-flex;
  padding: 14px 25px;
  border: solid 2px #B0BFC9;
}

.article_link:hover {
  border: solid 2px #051B2B;
}

.article_link a:hover {
  color: #051B2B;
}

.summary {
  margin: 0;
  padding: 0;
  padding-left: 15px;
}

.new_user_label {
  width: 200px;
  text-align: right;
  margin: 0;
  padding: 0;
  padding-right: 5px;
}

.nav_link:link, .nav_link:visited {
  background-color: transparent;
  color: #051B2B;
  font-weight: normal;
  text-align: left;
  border: none;
  padding: 5px 5px;
}

.nav_link_div {
  width: 150px;
  padding: 20px 0;
}

.article_tag:link, .article_tag:visited {
  text-align: left;
  text-decoration: none;
  color: #051B2B;
  background-color: transparent;
  padding: 0 6px;
  font-weight: normal;
  display: inline-block;
  border: none;
  font-size: 12px;
}

.tag_title:link, .tag_title:visited {
  text-align: center;
  text-decoration: none;
  color: #051B2B;
  background-color: #E7E7E7;
  padding: 14px 25px;
  font-weight: bold;
  display: inline-block;
  border: solid 2px #051B2B;
  width: 70%;
}

.tag_title:hover {
  color: #E7E7E7;
  background-color: #051B2B;
  border: solid 2px #051B2B;
}

.delete_tag:link, .delete_tag:visited {
  text-align: left;
  text-decoration: none;
  color: #051B2B;
  background-color: transparent;
  padding: 14px 25px;
  font-weight: normal;
  display: inline-block;
  border: none;
  width: 50px;
}

.nav_link:hover, .article_tag:hover, .delete_tag:hover {
  font-weight: bold;
}

.tags_container {
  display: inline-flex;
  font-size: 12px;
}

.flash {
}

.field {
  display: flex;
  padding: 0 0 5px 0;
}

.actions {
  padding: 30px;
}

.article {
  background-color: #E5E5E5;
  padding: 15px;
  color: #051B2B;
  font-size: 16px;
  border: groove;
}

.article_dateline {
  font-size: 12px;
  color: #3C3C3C;
}

.article_image {
  margin: 0;
  padding: 0;
  margin-left: -65px;
}

.comment, .new_comment {
  font-size: 14px;
}

.comment_title {
  font-size: 14px;
  font-weight: bold;
}

.comment_container {
  width: 50%;
}

#home {
  float:left;
}

#home a:link, #home a:visited, #loggin a:link, #loggin a:visited {
  color: #051B2B;
}

#home a:hover, #loggin a:hover {
  color: #36596F;
}

#loggin {
  float:right;
}

#wrapper {
  background: none;
  padding: 20px 15px 20px 15px;
  margin: 0 50px 0px 50px;
  font: {
    family: Verdana, Helvetica, Arial;
    size: 14px;
  }
}

#articles {
  min-width: 200px;
  max-width: 700px;
}

#tags li {
  display: inline-flex;
}

#comment_body {
  width: 50%;
  height: 100px;
}
